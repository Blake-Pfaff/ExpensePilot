# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (use 'db' for Docker, 'localhost' for local development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/expensepilot?schema=public"

# JWT Configuration
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here-change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
